@model Blog.Core.Models.Post

@{
    ViewBag.Title = Model.Title;
}

<div class="container post content-bg">
    <div class="p-4">
        <div class="row">
            <div class="col">
                <h2>@Html.PostLink(Model, Model.Title) @AdminOnly.EditPostLink(Html, Model)</h2>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <span>Kategoria: </span>@Html.CategoryLink(Model.Category)
            </div>

            <div class="col-auto text-right">
                @Model.PostedOn.ToConfigLocalTime()
            </div>
        </div>
        <div class="row">
            <div class="col">
                <span>Tagi:</span>@Helpers.Tags(Html, Model.Tags)
            </div>
        </div>
    </div>
    <div class="p-4">
        @Html.Raw(Model.Content)
    </div>
</div>

