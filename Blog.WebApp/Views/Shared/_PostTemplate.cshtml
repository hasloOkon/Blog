@model Blog.Core.Models.Post

<div class="post content-bg">
    <div class="p-4">
        <div class="row mb-3">
            <div class="col">
                <h2>
                    @Html.PostLink(Model, Model.Title)
                    @AdminOnly.EditPostLink(Html, Model)
                    @AdminOnly.DeletePostLink(Html, Model)
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <span>Kategoria: </span>@Html.CategoryLink(Model.Category)
            </div>

            <div class="col-auto text-right">
                @Model.PostedOn.ToFormattedDate()
            </div>
        </div>
        @if (Model.Tags.Any())
        {
            <div class="row">
                <div class="col">
                    <span>Tagi:</span>@Helpers.Tags(Html, Model.Tags)
                </div>
            </div>
        }
    </div>

    <div class="p-4">
        @Html.Raw(Model.Description)
    </div>

    <div class="text-right p-0 mr-2">
        @Html.PostLink(Model, "więcej...")
    </div>
</div>
