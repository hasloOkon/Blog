@model Blog.WebApp.Models.SidebarViewModel

<!-- Side bars -->
<div id="sidebars">
    <div class="sidebar">
        @Html.Partial("_Search")
    </div>
    <div class="sidebar">
        <h3>Categories</h3>
        <ul>
            @{
                foreach (var category in Model.Categories)
                {
                    <li>@Html.CategoryLink(category)</li>
                }
            }
        </ul>
    </div>
</div>