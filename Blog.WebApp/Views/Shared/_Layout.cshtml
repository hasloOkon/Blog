<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/external/css")
    @Styles.Render("~/internal/css")
    @Scripts.Render("~/external/js")
</head>
<body>
<div class="container">
    <div class="row">
        <div id="left-sidebar" class="col-3 mt-2 content-bg">
            @Html.Action("LeftSidebar", "Blog")
        </div>
        <div id="center-content" class="col-9 mt-2">
            <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active image-border">
                        <img class="d-block w-100" src="@Url.Content("~/Content/themes/night_sky_2/images/baltictrip_1.jpg")" alt="First slide">
                    </div>
                    <div class="carousel-item image-border">
                        <img class="d-block w-100" src="@Url.Content("~/Content/themes/night_sky_2/images/baltictrip_2.jpg")" alt="Second slide">
                    </div>
                    <div class="carousel-item image-border">
                        <img class="d-block w-100" src="@Url.Content("~/Content/themes/night_sky_2/images/baltictrip_3.jpg")" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            @RenderBody()
        </div>
    </div>
</div>
<div id="footer" class="container justify-content-center">
    Copyright © @DateTime.Now.Year BunnyBlog All Rights Reserved
</div>
    <script>
    $(document).ready(function () {
        $('.carousel').carousel();
    });
    </script>
</body>
</html>


