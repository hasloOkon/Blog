@model Blog.WebApp.ViewModels.Forms.EditCategoryForm

@{
    ViewBag.Title = Resources.EditCategory;
}

<div class="content-bg p-5">
    <h2>@Resources.EditCategory</h2>

    @using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)

        <div class="row mt-4">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class="row">
            @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="row mt-4">
            @Html.LabelFor(m => m.Description)
            &nbsp;
            @AdminOnly.CustomContent(Html.ImagesLink(Resources.BrowseImagesLink, openInNewTab: true))
        </div>
        <div class="row">
            <div class="w-100">
                @Html.TextAreaFor(m => m.Description, htmlAttributes: new { id = "short-description-editor" })
            </div>
        </div>
        <div class="form-group text-center mt-2">
            <button type="submit" class="btn">@Resources.Submit</button>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $('#short-description-editor').summernote({
            height: 200,
            followingToolbar: false
        });
    });
</script>
