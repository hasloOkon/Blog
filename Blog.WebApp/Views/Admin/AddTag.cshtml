@model Blog.WebApp.ViewModels.Forms.AddTagForm

@{
    ViewBag.Title = "AddTag";
}

<div class="content-bg p-5">
    <h2>Nowy tag</h2>

    @using (Html.BeginForm("AddTag", "Admin", FormMethod.Post))
    {
        <div class="row mt-4">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class="row">
            @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="row mt-4">
            @Html.LabelFor(m => m.Description)
        </div>
        <div class="row">
            <div class="w-100">
                @Html.TextAreaFor(m => m.Description, htmlAttributes: new { id = "short-description-editor" })
            </div>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn">Submit</button>
        </div>
    }
</div>

