@model Blog.WebApp.ViewModels.Forms.EditTagForm

@{
    ViewBag.Title = Resources.EditTag;
}

<div class="content-bg p-5">
    <h2>@Resources.EditTag</h2>

    @using (Html.BeginForm("EditTag", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)

        <div class="row mt-4">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class="row">
            @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control col-12" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group text-center mt-2">
            <button type="submit" class="btn">@Resources.Submit</button>
        </div>
    }
</div>
