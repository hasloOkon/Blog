@model Blog.WebApp.ViewModels.AddPostForm

@{
    ViewBag.Title = "AddPost";
}

<div class="content-bg">
    <h2 class="m-2">Nowy post</h2>

    @using (Html.BeginForm("AddPost", "Admin", FormMethod.Post, Html.Attributes()
        .Id(".form-horizontal")
        .Class("align-middle")))
    {
        <div class="form-group row">
            @Html.LabelFor(m => m.Title, Html.Attributes()
                .Id("control-label")
                .Class("col-2"))
            @Html.TextBoxFor(m => m.Title, Html.Attributes()
                .Class("col-8"))
            @Html.ValidationMessageFor(m => m.Title)
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.CategoryId, Html.Attributes()
                .Id("control-label")
                .Class("col-2"))
            @Html.CategoryDropDownListFor(m => m.CategoryId, Model.Categories)
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.TagIds, Html.Attributes()
                .Id("control-label")
                .Class("col-2"))
            @Html.TagListBoxFor(m => m.TagIds, Model.Tags, Html.Attributes()
                .Class("col-8"))
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.ShortDescription, Html.Attributes()
                 .Id("control-label")
                 .Class("col-2"))
            @Html.TextAreaFor(m => m.ShortDescription, Html.Attributes()
                 .Id("short-description-editor")
                 .Class("col-8"))
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Content, Html.Attributes()
                .Id("control-label")
                .Class("col-2"))
            @Html.TextAreaFor(m => m.Content, Html.Attributes()
                .Id("content-editor")
                .Class("col-8"))
        </div>

        <div class="form-group row">
            @Html.CheckBoxFor(m => m.Published, Html.Attributes()
                .Class("col-8 offset-2"))
            @Html.LabelFor(m => m.Published, Html.Attributes()
                .Class("col-8 offset-2"))
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn">Submit</button>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $('#short-description-editor').summernote({
            height: 100,
            followingToolbar: false
        });
        $('#content-editor').summernote({
            height: 300,
            followingToolbar: false
        });
    });
</script>
