@model IList<Blog.WebApp.ViewModels.ImageViewModel>

@{
    ViewBag.Title = Resources.Images;
}

<div class="content-bg p-5">
    <div class="row">
        @Html.Partial("_AddImage")
    </div>
    @if (Model.Any())
    {
        <div class="row">
            <h2 class="col-12">@Resources.ExistingImages</h2>
            @foreach (var image in Model)
            {
                <div class="col-12 row mt-2">
                    <div class="col-auto">
                        <img src="@Url.Content(image.ThumbnailPath)" alt=""/>
                    </div>
                    <div class="col">
                        @Html.TextBox("image-url", Url.Content(image.ImagePath), 
                            htmlAttributes: new { @class = "w-100" })
                    </div>
                    <div class="col-auto">
                        @AdminOnly.DeleteImageLink(Html, image.Id)
                    </div>
                </div>
            }
        </div>
    }
</div>
