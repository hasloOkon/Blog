{
    @CustomContent(htmlHelper.ActionLink("[usuń]", "DeletePost", "Admin",
            new { postId = post.Id },
            new { onclick = $"return confirm('Czy na pewno chcesz usunąć posta \"{post.Title}\"?')" }))
